{
	"name": "dyo",
	"version": "0.0.13",
	"license": "MIT",
	"description": "Dyo is a JavaScript library for building user interfaces",
	"homepage": "https://github.com/dyo/dyo",
	"author": "Sultan Tarimo <sultantarimo@me.com>",
	"repository": "https://github.com/dyo/dyo",
	"bugs": "https://github.com/dyo/dyo/issues",
	"main": "dist/dyo.umd.js",
	"module": "dist/dyo.esm.js",
	"files": [
		"index.js",
		"dist/",
		"src/",
		"server/"
	],
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint && npm run build-all",
		"test": "nyc npm run test-all",
		"test-all": "npm run test-dev && npm run test-prod",
		"test-dev": "cross-env NODE_ENV=development npm run test-spec",
		"test-prod": "cross-env NODE_ENV=production npm run test-spec",
		"test-spec": "mocha --harmony --require esm script/test.js --recursive test",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"build": "rollup --config script/build.js --configDir",
		"build-all": "npm run build -- . && npm run build -- server",
		"prepare": "npm run build-all",
		"postversion": "git push && git push --tags"
	},
	"devDependencies": {
		"dyo": "./",
		"esm": "3.0.84",
		"nyc": "13.1.0",
		"chai": "4.2.0",
		"mocha": "5.2.0",
		"jsdom": "12.2.0",
		"eslint": "5.9.0",
		"coveralls": "3.0.2",
		"cross-env": "5.2.0",
		"rollup-plugin-terser": "3.0.0",
		"rollup": "0.67.3"
	},
	"nyc": {
		"temp-dir": "./coverage/.nyc_output",
		"exclude": [
			"**/dist/",
			"**/test/",
			"**/script/"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"esm": {
		"cjs": true,
		"cache": false
	},
	"eslintIgnore": [
		"script/",
		"test/",
		"dist/",
		"docs/"
	],
	"eslintConfig": {
		"env": {
			"commonjs": true,
			"browser": true,
			"node": true,
			"es6": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module",
			"ecmaFeatures": {
				"impliedStrict": true
			}
		},
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"never"
			],
			"no-cond-assign": [
				"off"
			],
			"no-redeclare": [
				"off"
			],
			"no-fallthrough": [
				"off"
			],
			"no-console": [
				"off"
			],
			"no-unsafe-finally": [
				"off"
			],
			"no-param-reassign": [
				"error",
				{
					"props": false
				}
			],
			"no-shadow-restricted-names": [
				"error"
			],
			"no-whitespace-before-property": [
				"error"
			],
			"eol-last": [
				"error"
			],
			"func-call-spacing": [
				"error",
				"never"
			],
			"brace-style": [
				"error",
				"1tbs",
				{
					"allowSingleLine": true
				}
			],
			"max-len": [
				"error",
				{
					"code": 160
				}
			],
			"require-jsdoc": [
				"error",
				{
					"require": {
						"FunctionDeclaration": true
					}
				}
			],
			"no-trailing-spaces": [
				"error",
				{
					"skipBlankLines": true
				}
			],
			"no-constant-condition": [
				"off"
			]
		}
	}
}
