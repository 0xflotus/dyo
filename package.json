{
	"name": "dyo",
	"version": "0.0.0",
	"license": "MIT",
	"description": "Dyo is a JavaScript library for building user interfaces",
	"homepage": "https://github.com/dyo/dyo",
	"author": "Sultan Tarimo <sultantarimo@me.com>",
	"repository": "https://github.com/dyo/dyo",
	"bugs": "https://github.com/dyo/dyo/issues",
	"main": "dist/dyo.umd.js",
	"module": "dist/dyo.esm.js",
	"browser": "dist/dyo.umd.js",
	"jsdelivr": "dist/dyo.umd.js",
	"unpkg": "dist/dyo.umd.js",
	"files": [
		"**/index.js",
		"**/dist/",
		"**/src/"
	],
	"scripts": {
		"lint": "eslint ./*src/",
		"pretest": "npm run lint",
		"test": "nyc npm run test-all",
		"test-all": "npm run test-dev && npm run test-prod",
		"test-dev": "cross-env NODE_ENV=development npm run test-spec",
		"test-prod": "cross-env NODE_ENV=production npm run test-spec",
		"test-spec": "mocha --harmony --require esm script/test.js --recursive test",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"prepare": "npm run start",
		"start": "npm run build -- . && npm run build -- server",
		"build": "rollup --config script/build.js --configDir"
	},
	"devDependencies": {
		"dyo": "./",
		"esm": "3.0.84",
		"nyc": "13.1.0",
		"chai": "4.2.0",
		"mocha": "5.2.0",
		"jsdom": "12.2.0",
		"eslint": "5.9.0",
		"coveralls": "3.0.2",
		"cross-env": "5.2.0",
		"rollup-plugin-terser": "3.0.0",
		"rollup": "0.67.3"
	},
	"nyc": {
		"temp-dir": "./coverage/.nyc_output",
		"exclude": [
			"**/dist/",
			"**/test/",
			"**/script/"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"esm": {
		"cjs": true,
		"cache": false
	}
}
